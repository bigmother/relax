<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/relax"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="org.xzm.relax.model.entity" targetProject="MAVEN">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="org.xzm.relax.dao.mapper"  targetProject="MAVEN">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="org.xzm.relax.dao.mapper"  targetProject="MAVEN">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table schema="" tableName="USER" domainObjectName="User">
            <property name="modelOnly" value="true"/>
        </table>
        <table schema="" tableName="ROLE" domainObjectName="Role">
            <property name="modelOnly" value="true"/>
        </table>
        <table schema="" tableName="PERMISSION" domainObjectName="Permission">
            <property name="modelOnly" value="true"/>
        </table>

    </context>
</generatorConfiguration>